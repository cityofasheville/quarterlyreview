@model IEnumerable<QuarterlyReview.Models.Employees>

@using Microsoft.AspNetCore.Identity
@using QuarterlyReview.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Reviews Page";
    ViewData["Today"] = DateTime.Now.ToString("MMM dd, yyyy");
    List<DisplayReviewSummary> myReviews = (List<DisplayReviewSummary>)ViewData["MyReviews"];
    string employeeDisplay = "block";
}

@if (SignInManager.IsSignedIn(User))
{
    @if (Model.Count() > 0)
    {
        employeeDisplay = "none";
        <div class="form-group">
            <label class="radio-inline"><input type="radio" onclick="doit(0)" checked name="workflow" />My Employees</label>
            <label class="radio-inline"><input type="radio" onclick="doit(1)" name="workflow" />My Reviews</label>
        </div>
        <div id="employees" class="container">
            <div class="row">
                <div class="col-md-8">
                    <h2>Supervised Employees - Review Status</h2>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Current Due By</th>
                                <th>Last Review Completed</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                string lastRev = item.LastReviewed == null ? "" : ((DateTime)item.LastReviewed).ToString("M/dd/yyyy");
                                string due = item.ReviewBy == null ? "x" : ((DateTime)item.ReviewBy).ToString("M/dd/yyyy");
                                <tr>
                                    <td>
                                        <a asp-area="" asp-controller="Reviews" asp-action="Index" asp-route-emp="@item.EmpId">@item.Employee</a>
                                    </td>
                                    <td>
                                        <a asp-area="" asp-controller="Reviews" asp-action="Review" asp-route-emp="@item.EmpId">@due</a>
                                    </td>
                                    <td>@lastRev</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    if (Model.Count() <= 0)
    {
        employeeDisplay = "block";
    }
    <div id="reviews" style="display:@employeeDisplay" class="container">
        <div class="row">
            <div class="col-md-8">
                <h2>Reviews of @ViewData["Employee"]</h2>
            </div>
            <div class="col-md-4">
                <div>&nbsp; </div><br />
                <div style="float: right"><b>Current Supervisor: @ViewData["Supervisor"]</b></div>
            </div>
        </div>
        <br />
        <div class="row">
            <h3>Current Review</h3>
            <table class="table">
                <thead>
                    <tr>
                        <th>Period</th>
                        <th>Status</th>
                        <th>Last Change</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in myReviews)
                    {
                        if (item.status != "Closed")
                        {
                            string reviewPeriod = String.Format("{0} - {1}",
                                item.periodStart.ToString("MM/dd/yyyy"),
                                item.periodEnd.ToString("MM/dd/yyyy"));
                            string statusMsg = "waiting on supervisor.";
                            switch (item.status)
                            {
                                case "Ready":
                                    statusMsg = "ready for employee review.";
                                    break;
                                case "Acknowledged":
                                    statusMsg = "waiting on supervisor";
                                    break;
                                default:
                                    break;
                            }

                            <tr>
                                <td>
                                    <a asp-area="" asp-controller="Reviews" asp-action="Review" asp-route-id="@item.reviewID" asp-route-emp="@item.employeeID">@reviewPeriod</a>
                                </td>
                                <td>@item.status: @statusMsg</td>
                                <td>@item.statusDate.ToString("MM/dd/yyyy")</td>
                            </tr>
                                                }
                                }
                </tbody>
            </table>
        </div>
        <div class="row">
            <h3>Past Reviews</h3>
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Review Period</th>
                            <th>Date Completed</th>
                            <th>Reviewer</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in myReviews)
                            {
                                if (item.status == "Closed")
                                {
                                    string reviewPeriod = String.Format("{0} - {1}",
                                        item.periodStart.ToString("MM/dd/yyyy"),
                                        item.periodEnd.ToString("MM/dd/yyyy"));
                                <tr>
                                    <td>
                                        <a asp-area="" asp-controller="Reviews" asp-action="Review" asp-route-id="@item.reviewID" asp-route-emp="@item.employeeID">@reviewPeriod</a>
                                    </td>
                                    <td>@item.statusDate.ToString("MMM dd, yyyy")</td>
                                    <td>@item.supervisorName</td>
                                </tr>
                                }
                            }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h2>You Need To Sign In</h2>
        </div>
    </div>
}

<script>
    function doit(which) {
                        if (which == 0) {
                            console.log("Doing it");
                            document.getElementById("reviews").style.display = 'none';
                            document.getElementById("employees").style.display = 'block';
                        }
                        else {
                            console.log("Undoing it");
                            document.getElementById("employees").style.display = 'none';
                            document.getElementById("reviews").style.display = 'block';
                        }
                    }
</script>