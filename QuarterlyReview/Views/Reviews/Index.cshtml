@model IEnumerable<QuarterlyReview.Models.Employees>

@using Microsoft.AspNetCore.Identity
@using QuarterlyReview.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@{
    ViewData["Title"] = "Home Page";
    ViewData["Today"] = DateTime.Now.ToString("MMM dd, yyyy");
    List<DisplayReviewSummary> myReviews = (List<DisplayReviewSummary>)ViewData["MyReviews"];
}

@if (SignInManager.IsSignedIn(User))
{
    @if (Model.Count() > 0)
    {
        <div class="row">
            <div class="col-md-8">
                <h2>Supervised Employees - Review Status</h2>
            </div>
            <div class="col-md-4">
                <div style="float: right"><b>@ViewData["Employee"]</b></div><br />
                <div style="float: right"><b>@ViewData["Today"]</b></div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <table class="table">
                    <thead>
                        <tr>
                            <th></th>
                            <th>Name</th>
                            <th>Employee ID</th>
                            <th>Last Review</th>
                            <th>Next Due By</th>
                            <th>Note</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <a asp-area="" asp-controller="Reviews" asp-action="Edit" asp-route-id="@item.EmpId">Current</a>
                                </td>
                                <td>
                                    <a asp-area="" asp-controller="Reviews" asp-action="Index" asp-route-id="@item.EmpId">@item.Employee</a>
                                </td>
                                <td>@item.EmpId</td>
                                <td>@item.LastReviewed</td>
                                <td>@item.ReviewBy</td>
                                <td>-</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
    else
    {
        <p>You have no supervised employees.</p>
    }
    <br />

    <div class="row">
        <div class="col-md-8">
            <h2>My Reviews</h2>
        </div>
        <div class="col-md-4">
            <div>&nbsp; </div><br />
            <div style="float: right"><b>Supervisor: @ViewData["Supervisor"]</b></div>
        </div>
    </div>
    <br />
    <div class="row">
        <div class="col-md-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>Status</th>
                        <th>Status Date</th>
                        <th>Period Start</th>
                        <th>Period End </th>
                        <th>Link</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in myReviews)
                    {
                        <tr>
                            <td>@item.status</td>
                            <td>@item.statusDate.ToString("MMM dd, yyyy")</td>
                            <td>@item.periodStart.ToString("MMM dd, yyyy")</td>
                            <td>@item.periodEnd.ToString("MMM dd, yyyy")</td>
                            <td><a href="#">View</a> </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h2>You Need To Sign In</h2>
        </div>
    </div>
}