@model QuarterlyReview.Models.DisplayReview

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
<link rel="stylesheet" href="~/css/site.css" />
<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>
<script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
<script>
tinymce.init({
        selector: 'textarea',
        inline: true,
        browser_spellcheck: true,
        branding: false,
      

    });</script>


<h2>Edit</h2>

<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Reviews</h4>
        <hr />
        <p>Review (id @Model.reviewID) of @Model.employeeName by @Model.reviewerName</p>
        <div class="form-group">
            <label for="startDate" class="col-md-2 control-label">From</label>
            <div class="col-md-10">
                <input type="date" class="form-control" value="@Model.periodStart.ToString("yyyy-MM-dd")" />
            </div>
            <label for="endDate" class="col-md-2 control-label">To</label>
            <div class="col-md-10">
                <input type="date"  class="form-control" value="@Model.periodEnd.ToString("yyyy-MM-dd")" />
            </div>
        </div>
        <hr />
        @if (Model.questions.Count() > 0)
        {
            @foreach (var item in Model.questions)
            {
                @Html.Raw(item.question)
                <textarea name="qanswer-@item.qID"  rows="4" cols="200" spellcheck="true" branding ="false">
                    @Html.Raw((item.answer == null) ? "" : item.answer)
                </textarea>

            }
            <br />
        }

        @Html.Hidden("review-id", Model.reviewID);
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>

    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
