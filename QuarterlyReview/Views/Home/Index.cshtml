@model IEnumerable<QuarterlyReview.Models.Employees>

@using Microsoft.AspNetCore.Identity
@using QuarterlyReview.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
    
@{
    ViewData["Title"] = "Home Page";
}

@if (SignInManager.IsSignedIn(User))
{
    <div class="row">
        <div class="col-md-12">
            <h2>Employee Review Status for @ViewData["Employee"]</h2>
            <h3>Supervisor: @ViewData["Supervisor"]</h3>
            @if (Model.Count() > 0)
            {
                <ul>
                    @foreach (var item in Model)
                    {
                        <li> @item.Employee
                            <a asp-area="" asp-controller="Reviews" asp-action="Edit" asp-route-id="@item.EmpId">Edit</a>
                        </li>
                    }
                </ul>
            }
            else  {
                <p>You have no supervised employees.</p>
            }
        </div>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
            <h2>You Need To Sign In</h2>
            <ul>
                <li>Sample pages using ASP.NET Core MVC</li>
            </ul>
        </div>
        </div>
}